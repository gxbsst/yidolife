<%= form_for [refinery, :topics_admin, @topic] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @topic,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @topic.photo,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.topics.admin.topics.topic'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @topic.title) %>
<% end -%>
