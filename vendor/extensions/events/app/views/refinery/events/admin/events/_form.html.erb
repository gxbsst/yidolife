<%= form_for [refinery, :events_admin, @event] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @event,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @event.photo,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :time -%>
    <%= f.datetime_select :time  -%>

  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address  -%>

  </div>
  
  <div class='field'>
    <%= f.label :fee -%>
    <%= f.text_field :fee  -%>

  </div>
  
  <div class='field'>
    <%= f.label :categroy -%>
    <%= f.text_field :categroy  -%>

  </div>
  
  <div class='field'>
    <%= f.label :end_time -%>
    <%= f.datetime_select :end_time  -%>

  </div>
  
    <div class='field'>
    <%= f.label :count_url -%>
    <%= f.text_field :count_url  -%>

  </div>

  <div class='field'>
    <%= f.label :date_end -%>
    <%= f.number_field :date_end  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/events/event", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :is_show -%>
    <%= f.check_box :is_show, :checked => @event[:is_show]  -%>

  </div>
  
   <div class='field'>
    <%= f.label :is_recent -%>
    <%= f.check_box :is_recent, :checked => @event[:is_recent]  -%>

  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.events.admin.events.event'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @event.title) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
