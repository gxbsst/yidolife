<div class="prompt">您现在的位置：<a href="/">首页</a> > <span>活动</span></div>

<div class="recently">


	<div class="rec_img"><%=image_fu(@event.photo, "180x270px") %></div>
	<dl class="rec_text">
	<dt><%= @event.title %></dt>
	<dd>时间:  <%= @event.time.strftime("%Y-%m-%d %H:%M:%S") %></dd>
	<dd>地点:  <%= @event.address %></dd>
	<dd>费用:  <%= @event.fee %></dd>
	<dd>类型:  <%= @event.categroy %></dd>
	<dd>报名截止: <%= @event.end_time.strftime("%Y-%m-%d %H:%M:%S") %>  </dd>
	<dd>活动详情: <%= raw  truncate(@event.description,:length => 20,:omission => '...') %></dd>
	<dd class="button1"><a href="/events/<%= @event.id.to_s %>"><img src="images/activity_pic3.gif" width="76" height="27" /></a></dd>
	</dl> 
</div>


<div class="jq_activity">
<div class="tac_title">
<span class="tt_1">近期活动</span><span class="tt_2">RECENT ACTIVITY</span><span class="tt_8"></span>
</div>
<ul class="act_review">
  <% @recent_events.each do |event| %>
	  <li> 
	  	<span class="ar_img">
	  		<%= link_to "/events/#{event.id}"  do %>
		       <%= image_fu(event.photo, "160x240px") %>
            <% end %> 
	  	</span> 
	  	<span class="ar_title"><%= link_to event.title, "/events/#{event.id}" %></span> 
	  	<span class="ar_share">
	  		<div id="recent_<%= event.id %>" >
			<div id="ckepop">
				<a href="http://www.jiathis.com/share/?uid=1341799835618494" class="jiathis jiathis_txt jtico jtico_jiathis" target="_blank"></a>
				<span class="jiathis_txt">分享到：</span>	
				<a class="jiathis_counter_style"></a>
			</div>
				<%= render "share_to_sns/sns_event_one",
					            :id => event.id,
								:title => event.title %>

	        <div style="clear:both"></div>
			</div>
	  	</span> 
	  </li>
  <% end %>
</ul>

</div>


<div class="review">
<div class="tac_title">
<span class="tt_1">往期回顾</span><span class="tt_2">REVIEW BACK</span><span class="tt_5"></span>
</div>
<ul class="act_review">
<% @events.each do |event| %>
  <li> 
  	<span class="ar_img">
  		<%= link_to "/events/#{event.id}"  do %>
		    <%= image_fu(event.photo, "160x240px") %>
        <% end %> 
  	</span>
  	<span class="ar_title"><%= link_to event.title, "/events/#{event.id}" %></span>
    <span class="ar_share">
    	<div id="share_<%= event.id %>" >
		<div id="ckepop">
			<a href="http://www.jiathis.com/share/?uid=1341799835618494" class="jiathis jiathis_txt jtico jtico_jiathis" target="_blank"></a>
			<span class="jiathis_txt">分享到：</span>	
			<a class="jiathis_counter_style"></a>
		</div>
		<%= render "share_to_sns/sns_event_second",
					            :id => event.id,
								:title => event.title %>

        <div style="clear:both"></div>
		</div>
    </span> 
  </li>
<% end %>
</ul> 


</div>
