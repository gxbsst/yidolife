<div class="acl_top">
<div class="rec_img"><%= image_fu(@event.photo, "180x270px") %></div>

<dl class="at_text">
<dt><%= @event.title %></dt>
<dd>时间:  <%= @event.time.strftime("%Y-%m-%d %H:%M") %></dd>
<dd>地点:  <%= @event.address %></dd>
<dd>费用:  <%= @event.fee %></dd>
