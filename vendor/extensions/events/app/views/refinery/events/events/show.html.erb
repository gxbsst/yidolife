<div class="reg_con">

<div class="reg_text1">距离报名结束还有</div>
<div class="reg_text2">
	<span class="rt_1">
		<%= @event.end_day(@event.end_time) %>
	</span>
	<span>天</span>
</div>
<div class="reg_text3"><span>已有</span><span class="rt_2"><%= @people_num %></span><span>团队报名</span></div>
<div class="reg_btn">
 
    <% if @event.end_day(@event.end_time) > 0 %>
      <% if @event.enjoy_url.present? %>
        <%= link_to image_tag("/images/ac_pic2.gif",:size => "145x30"),@event.enjoy_url %>
      <% else %>
        <a href="http://yidong.wufoo.com/forms/e/ " target="_blank">
        <img src="/images/ac_pic2.gif" width="145" height="30" />
      <% end %>
    <% else %>
      <img src="/images/reg_btn2.gif" width="145" height="30" />
    <% end %>
  </a>
</div>


